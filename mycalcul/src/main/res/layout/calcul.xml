<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
            android:text="/"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:id="@+id/button2" android:onClick="div"
            app:layout_constraintTop_toTopOf="@+id/button3" app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="*"
            android:layout_width="28dp"
            android:layout_height="44dp"
            android:id="@+id/button4" android:onClick="multiple"
            app:layout_constraintTop_toTopOf="@+id/button3" app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="100dp" android:id="@+id/number1"
            android:hint="number1" android:gravity="center" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription=" "/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/number2"
            android:hint="number2" android:gravity="center"
            tools:layout_editor_absoluteX="99dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <Button
            android:text="-"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:id="@+id/button" android:onClick="sub"
            app:layout_constraintTop_toTopOf="@+id/button3" app:layout_constraintBottom_toBottomOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <Button
            android:text="+"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:id="@+id/button3" android:onClick="sum"
            tools:layout_editor_absoluteX="64dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/number1"/>
    <TextView
            android:text="resultat"
            android:layout_width="216dp"
            android:layout_height="32dp"
            tools:layout_editor_absoluteX="97dp" android:id="@+id/resultat" android:gravity="center"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/number2"/>
</androidx.constraintlayout.widget.ConstraintLayout>